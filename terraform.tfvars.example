hcloud_token                = "<required_hcloud_token>"
server_type                 = "cx21"
server_image                = "ubuntu-22.04"
server_location             = "nbg1"
cluster_name                = "kube"
cluster_user                = "kube"
cluster_fqdn                = "kube.example.org"
my_public_ssh_name          = "kube"
my_public_ssh_key           = "<required_public_ssh_key>"
my_ip_addresses             = ["0.0.0.0/0", "::/0"]
servers = {
  controller = {
    server_type  = "cx21",
    server_count = 2,
  }
  worker = {
    server_type  = "cx21"
    server_count = 2
  },
  data = {
    server_type  = "cx21"
    server_count = 2
  }
}
volumes = {
  vol-01 = {
    server = "data-01"
    size   = 10
  }
  vol-02 = {
    server = "data-02"
    size   = 10
  }
}
lb_services = [80, 443]
