hcloud_token                = "<required_hcloud_token>"
server_image                = "ubuntu-22.04"
server_location             = "nbg1"
cluster_name                = "kube"
cluster_user                = "kube"
cluster_fqdn                = "kube.example.org"
my_public_ssh_name          = "kube"
my_public_ssh_key           = "<required_public_ssh_key>"
my_ip_addresses             = ["0.0.0.0/0", "::/0"]
controller_server_type  = "cx21"
controller_server_count = 1
workers = [
  {
    role         = "worker",
    server_type  = "cx21"
    server_count = 2,
  },
  {
    role         = "data",
    server_type  = "cx21"
    server_count = 1
  }
]
volumes = [
  {
    name   = "vol-01",
    server = "data-01"
    size   = 10
  }
]
lb_services = [80, 443]
